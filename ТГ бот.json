# Команда /start 
async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text("Привет! Я бот для просмотра расписания.")

# Показываем расписание конкретного дня недели
async def show_day(update: Update, context: ContextTypes.DEFAULT_TYPE):
    day = context.args[0].capitalize() if len(context.args) > 0 else None
    if not day or day not in schedule.keys():
        await update.message.reply_text(f"Введите корректный день недели.\nДоступные дни: {', '.join(schedule.keys())}")
        return
    
    subjects = schedule.get(day, [])
    response = f"{day}:\n"
    for subject in subjects:
        response += f"- В {subject['time']} урок: {subject['subject']}\n"
    await update.message.reply_text(response)

